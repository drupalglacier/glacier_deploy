#!/bin/bash
ENVIRONMENT="dev"

# General.
KEEP_OLD_BACKUPS=false
REPOSITORY="git@github.com:$PROJECT_MACHINE_NAME/$PROJECT_MACHINE_NAME.git"

# Directories.
LOCAL_DOCROOT="/var/www/devbox/$PROJECT_MACHINE_NAME"
LOCAL_WORKSPACE="$LOCAL_DOCROOT/sites"
